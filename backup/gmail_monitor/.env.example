# ===================================================
# GMAIL MONITOR - CONFIGURAZIONE
# ===================================================
# IMPORTANTE: NON committare questo file su Git!
# ===================================================

# ========== CREDENZIALI GMAIL ==========
GMAIL_EMAIL=job.seminara@gmail.com
GMAIL_APP_PASSWORD=ujcw rcmz derr ubdu

# ========== FILTRI EMAIL ==========
# Etichetta Gmail da monitorare (INBOX o nome etichetta personalizzata)
GMAIL_LABEL=INBOX

# Solo email non lette
UNREAD_ONLY=true

# Parole chiave nell'oggetto (separate da virgola)
SUBJECT_KEYWORDS=Transfer Order,TO ,Ordine

# Whitelist mittenti (vuoto = tutti, separate da virgola)
# Esempio: SENDER_WHITELIST=ordini@angelini.it,orders@bayer.com
SENDER_WHITELIST=

# ========== BACKEND LOCALE ==========
BACKEND_URL=http://localhost:8000
UPLOAD_TIMEOUT=120

# ========== COMPORTAMENTO POST-ELABORAZIONE ==========
# Marca email come lette dopo elaborazione
MARK_AS_READ=true

# Applica etichetta Gmail dopo elaborazione
APPLY_LABEL=Processed

# Elimina PDF temporanei dopo upload
DELETE_TEMP_FILES=true

# ========== LIMITI ==========
# Massimo numero email da elaborare per esecuzione
MAX_EMAILS_PER_RUN=50

# Dimensione massima allegato (MB)
MAX_ATTACHMENT_SIZE_MB=50

# Dimensione minima allegato (KB)
MIN_ATTACHMENT_SIZE_KB=10

# ========== RETRY ==========
# Numero massimo tentativi per email in errore
MAX_RETRIES=3

# Attesa tra retry (secondi)
RETRY_DELAY_SECONDS=60

# ========== LOGGING ==========
# Livello log: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# File di log
LOG_FILE=logs/gmail_monitor.log